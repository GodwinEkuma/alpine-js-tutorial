{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "We Connect Api",
      "description": "WeConnect provides a platform that brings businesses and individuals together. This platform creates awareness for businesses and gives the users the ability to write reviews about the businesses they have interacted with"
    },
    "host": "geo-we-connect.herokuapp.com",
    "basePath": "/api/v1",
    "schemes": [
      "http",
      "https"
    ],
    "paths": {
      "/auth/signup": {
        "post": {
          "tags": [
            "User"
          ],
          "summary": "Sign up a user a user",
          "description": "Registers a user",
          "consumes": [
            "application/x-www-form-urlencoded"
          ],
          "parameters": [{
              "in": "formData",
              "name": "email",
              "type": "string",
              "format": "email",
              "required": true
            },
            {
              "in": "formData",
              "name": "password",
              "type": "string",
              "format": "password",
              "required": true
            },
            {
              "in": "formData",
              "name": "businessName",
              "type": "string",
              "required": true
            },
            {
              "in": "formData",
              "name": "businessCategory",
              "type": "string",
              "required": true
            },
            {
              "in": "formData",
              "name": "firstName",
              "type": "string",
              "required": true
            },
            {
              "in": "formData",
              "name": "lastName",
              "type": "string",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "400": {
              "description": "User exist"
            },
            "500": {
              "description": "Server Error"
            }
          }
        }
      },
      "/auth/signin": {
        "post": {
          "tags": [
            "User"
          ],
          "summary": "Signs in a user",
          "description": "Checks if a user exists and logins the user in.",
          "consumes": [
            "application/x-www-form-urlencoded"
          ],
          "parameters": [{
              "in": "formData",
              "name": "email",
              "format": "email",
              "type": "string",
              "required": true
            },
            {
              "in": "formData",
              "name": "password",
              "type": "string",
              "format": "password",
              "required": true
            }            
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "User does not  Exists"
            },
            "500": {
              "description": "Server Error"
            }
          }
        }
      },
      "/businesses": {
        "get": {
          "tags": ["Businesses"],
          "summary": "Get all Businesses",
          "description": "Retrieve all the businesses in the database.",
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "No businesses in the database"
            },
            "500": {
              "description": "Server Error"
            }
          }
        },
        "post": {
          "tags": ["Business"],
          "summary": "Creates a new business",
          "description": "Creates a new business and stores it to the database.",
          "parameters": [{
            "name": "businessName",
            "in": "body",
            "description": "The business to create.",
            "schema": {
              "$ref": "#/definitions/Business"
            }
          }],
          "responses": {
            "200": {
              "description": "OK"
            },
            "400": {
              "description": "Bad Request"
            },
            "500": {
              "description": "Server Error"
            }
          }
        }
      },
      "/events/{id}": {
        "get": {
          "tags": ["Business"],
          "summary": "Gets a business",
          "description": "Get a business with id from the database.",
          "parameters": [{
            "name": "id",
            "in": "path",
            "type": "integer",
            "description": "The business to get."
          }],
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "No such business"
            },
            "500": {
              "description": "Server Error"
            }
          }
        },
        "put": {
          "tags": ["Business"],
          "summary": "Update a business",
          "description": "Update an existing business  in the database.",
          "parameters": [{
            "name": "id",
            "in": "path",
            "type": "integer",
            "description": "The business id to update."
          }, {
            "name": "businessName",
            "in": "body",
            "description": "The changes to make.",
            "schema": {
              "$ref": "#/definitions/Business"
            }
          }],
          "responses": {
            "200": {
              "description": "OK"
            },
            "400": {
              "description": "Bad Request"
            },
            "500": {
              "description": "Server Error"
            }
          }
        },
        "delete": {
          "tags": ["Business"],
          "summary": "Delete a business",
          "description": "Delete an existing business from the database.",
          "parameters": [{
            "name": "id",
            "in": "path",
            "type": "integer",
            "description": "The business to delete."
          }],
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "No such business"
            },
            "500": {
              "description": "Server Error"
            }
          }
        }
      },
      "/businesses/{id}/reviews": {
        "get": {
          "tags": ["Reviews"],
          "summary": "Gets all reviews for a business",
          "description": "gets all reviews  in the database.",
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "No reviews Found"
            },
            "500": {
              "description": "Server Error"
            }
          }
        },
        "post": {
          "tags": ["Reviews"],
          "summary": "Adds a review to a business",
          "description": "Creates a new review and stores to the database.",
          "parameters": [{
            "name": "reviewTitle",
            "in": "body",
            "description": "The title of the review to be added.",
            "schema": {
              "$ref": "#/definitions/Review"
            }
          }],
          "security": [{
            "UserToken": []
          }],
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "No such business"
            },
            "500": {
              "description": "Server Error"
            }
          }
        }
      }
    },
    "definitions": {
      "Business": {
        "required": [
          "businessName",
          "businessEmail",
          "businessAddress"
        ],
        "properties": {
          "businessName": {
            "type": "string",
            "uniqueItems": true
          },
          "businessPhone": {
            "type": "string"
          },
          "businessEmail": {
            "type": "string"
          },
          "businessCategory": {
            "type": "string"
          },
          "businessWebsite": {
            "type": "string"
          },
          "businessAddress": {
            "type": "string"
          },
          "businessLogo": {
            "type": "string"
          },
          "businessProfileImage": {
            "type": "string"
          },
          "products": [{
            "type": "array",
            "properties": {
              "product": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }

          }]
        }
      },
      "Review": {
        "required": [
          "reviewTitle",
          "reviewName",
          "reviewDescription"
        ],
        "properties": {
          "reviewTitle": {
            "type": "string"
          },
          "reviewName": {
            "type": "string"
          },
          "reviewDescription": {
            "type": "string"
          }
        }
      }
    }
  }
  